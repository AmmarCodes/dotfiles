#!/bin/bash
set -euo pipefail

if [ -x "$(command -v brew)" ]; then
	echo "Upgrading Homebrew packages"
	brew update && brew upgrade --ignore-pinned
	brew upgrade --cask && brew cleanup
	brew bundle dump --force --all --describe --file=~/.dotfiles/Brewfile
fi

# if [ -x "$(command -v npm)" ]; then
# 	echo "Updating npm packages"
# 	npm install -g && npm update -g
# fi

if [ -x "$(command -v composer)" ]; then
	echo "Upgrading composer packages"
	composer global update
fi

if [ -x "$(command -v pip3)" ]; then
	echo "Upgrading pip3"
	pip3 install pip --upgrade
fi

if [ -x "$(command -v zinit)" ]; then
	echo "Upgrading zsh plugins"
	zinit self-update
	zinit update --all
fi

if [ -x "$(command -v pip3)" ]; then
	echo "Upgrading neovim python package"
	pip3 install neovim --upgrade
fi

echo "Upgrading nvim plugins"
nvim --headless -c 'autocmd User PackerComplete quitall' -c 'PackerSync' #nvim +PlugUpgrade +PlugUpdate +PlugClean +qall

if [ -x "$(command -v mas)" ]; then
	echo "Upgrading Mac App Store apps"
	mas upgrade
fi


if [ -d ~/.tmux/plugins/tpm ]; then
	echo "Updating tmux plugins"
	~/.tmux/plugins/tpm/bin/update_plugins all
fi
