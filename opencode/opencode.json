{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin-frappe",
  "autoupdate": false,
  "mcp": {
    "lazy-mcp": {
      "type": "local",
      "command": [
        "npx",
        "lazy-mcp@1.2.0",
        "--config",
        "~/.config/opencode/lazy-mcp-servers.json"
      ],
      "enabled": true
    }
  },
  "plugin": [
    "@franlol/opencode-md-table-formatter@0.0.3",
    "@tarquinen/opencode-dcp@2.1.3",
    "oh-my-opencode@3.5.3"
  ],
  "tools": {
    "ls": true,
    "cat": true
  },
  "share": "disabled",
  "disabled_providers": ["zai"]
}
