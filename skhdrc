# Window navigation

alt - h : yabai -m window --focus west  || yabai -m display --focus west
alt - j : yabai -m window --focus south || yabai -m display --focus south
alt - k : yabai -m window --focus north || yabai -m display --focus north
alt - l : yabai -m window --focus east  || yabai -m display --focus east


# toggle window float
shift + alt - f : yabai -m window --toggle float --grid 4:4:1:1:2:2

# maximize a window
shift + alt - m : yabai -m window --toggle zoom-fullscreen

# swap windows
ctrl + alt - j : yabai -m window --swap south
ctrl + alt - k : yabai -m window --swap north
ctrl + alt - h : yabai -m window --swap west
ctrl + alt - l : yabai -m window --swap east

# move window and split
# ctrl + alt - j : yabai -m window --warp south
# ctrl + alt - k : yabai -m window --warp north
# ctrl + alt - h : yabai -m window --warp west
# ctrl + alt - l : yabai -m window --warp east

## Resize (ctrl + lalt - ...)
shift + lalt - h    : yabai -m window --resize right:-100:0 || yabai -m window --resize left:-100:0
shift + lalt - l    : yabai -m window --resize right:100:0 || yabai -m window --resize left:100:0
shift + lalt - j    : yabai -m window --resize bottom:0:100 || yabai -m window --resize top:0:100
shift + lalt - k    : yabai -m window --resize bottom:0:-100 || yabai -m window --resize top:0:-100


#change focus between external displays (left and right)
# alt - s: yabai -m display --focus west
# alt - g: yabai -m display --focus east

# move window to display left and right
# shift + alt - left : yabai -m window --display west; yabai -m display --focus west;
# shift + alt - right : yabai -m window --display east; yabai -m display --focus east;

# move focus to space #
# alt - 1 : yabai -m window --space 1;
# alt - 2 : yabai -m window --space 2;
# alt - 3 : yabai -m window --space 3;
# alt - 4 : yabai -m window --space 4;
# alt - 5 : yabai -m window --space 5;

# move window to space #
# shift + alt - 1 : yabai -m window --space 1;
# shift + alt - 2 : yabai -m window --space 2;
# shift + alt - 3 : yabai -m window --space 3;
# shift + alt - 4 : yabai -m window --space 4;
# shift + alt - 5 : yabai -m window --space 5;

# Equalize size of windows: ctrl + lalt - e
alt - e : yabai -m space --balance

# Enable / Disable gaps in current workspace: ctrl + lalt - g
ctrl + alt - g : yabai -m space --toggle padding; yabai -m space --toggle gap

# New window in hor./ vert. splits for all applications with yabai
# alt - s : yabai -m window --insert east;  skhd -k "cmd - n"
# alt - v : yabai -m window --insert south; skhd -k "cmd - n"

# Rotate the window tree clock-wise (options: 90, 180, 270 degree)
alt - r : yabai -m space --rotate 90

# toggle layout
alt - b : yabai -m space --layout bsp
alt - f : yabai -m space --layout float
