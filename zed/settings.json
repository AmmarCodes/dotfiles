// from the command palette or from `Zed` application menu.
{
  "agent": {
    "default_profile": "write",
    "play_sound_when_agent_done": false,
    "model_parameters": [],
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    }
  },
  "theme": "Catppuccin Frappé",
